<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest ExtensionBundleId="com.victorvandamme.silencer"
                   ExtensionBundleVersion="1.0"
                   Version="7.0"
                   ExtensionBundleName="Silencer">
  <ExtensionList>
    <Extension Id="com.victorvandamme.silencer.panel"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <Host Name="PPRO" Version="12.0"/>
    </HostList>
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <DispatchInfo>
      <Resources>
        <MainPath>./index.html</MainPath>
      </Resources>

      <Lifecycle>
        <AutoVisible>true</AutoVisible>
      </Lifecycle>

      <UI>
        <Type>Panel</Type>
      </UI>

      <CEFCommandLine>
        <!-- allow node usage inside the panel -->
        <Parameter>--enable-nodejs</Parameter>
      </CEFCommandLine>
    </DispatchInfo>
  </DispatchInfoList>
</ExtensionManifest>
