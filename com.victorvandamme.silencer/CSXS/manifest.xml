<?xml version="1.0" encoding="UTF-8"?>

<ExtensionManifest ExtensionBundleId="com.victorvandamme.silencer"
                   ExtensionBundleVersion="1.0"
                   Version="7.0"
                   ExtensionBundleName="Silencer">

  <ExtensionList>
    <Extension Id="com.victorvandamme.silencer.panel"/>
  </ExtensionList>

  <ExecutionEnvironment>
    <HostList>
      <!-- Support Premiere Pro from 12.0 to future -->
      <Host Name="PPRO" Version="[12.0,99.9]"/>
    </HostList>
    <RequiredRuntimeList>
      <!-- Use CEP 11 -->
      <RequiredRuntime Name="CSXS" Version="11.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>

  <DispatchInfoList>
    <DispatchInfo Extension="com.victorvandamme.silencer.panel">
      <Resources>
        <MainPath>./index.html</MainPath>
      </Resources>
      <Lifecycle>
        <AutoVisible>true</AutoVisible>
      </Lifecycle>
      <UI>
        <Type>Panel</Type>
        <Menu>Silencer</Menu>
        <Geometry>
          <Size>
            <Height>300</Height>
            <Width>400</Width>
          </Size>
          <MinSize>
            <Height>200</Height>
            <Width>200</Width>
          </MinSize>
          <MaxSize>
            <Height>2000</Height>
            <Width>2000</Width>
          </MaxSize>
        </Geometry>
      </UI>
      <CEFCommandLine>
        <Parameter>--enable-nodejs</Parameter>
      </CEFCommandLine>
    </DispatchInfo>
  </DispatchInfoList>

</ExtensionManifest>
